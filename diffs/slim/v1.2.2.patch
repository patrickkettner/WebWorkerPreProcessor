           elsif @line[0] == ?}
             count -= 1
           end
-        elsif @line =~ /\A#\{/
-          value << @line.slice!(0)
+	elsif @line =~ /^#\{/
+	  firstChar = @line.slice(0)
+	  @line = @line.slice(1..-1)
+	  value += firstChar
           count = 1
         end
-        value << @line.slice!(0)
+	firstChar = @line.slice(0)
+	@line = @line.slice(1..-1)
+	value += firstChar
       end
 
       syntax_error!("Expected closing brace }") if count != 0
-      @line.slice!(0)
+      @line = @line.slice(1..-1)
       value
     end
 
