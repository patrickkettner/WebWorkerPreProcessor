         @stacks << block
         parse_text_block
         return # Don't append newline
-      when /\Adoctype\s+/i
+      when /^doctype\s+/i
         # Found doctype declaration
         @stacks.last << [:html, :doctype, $'.strip]
-      when /\A([#\.]|\w[:\w-]*)/
+      when /^([#\.]|\w[:\w-]*)/
         # Found a HTML tag.
         parse_tag($&)
       else
